// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement()) @unique
  name String
  email String @unique
  password String
  refresh_token String?
  activities Activity[]
  weeks Week[]
}

model Activity {
  id  Int @id @default(autoincrement())
  user User @relation(fields: [userId], references: [id]) 
  userId Int 
  activityId Float @unique
  distance Float
  elapsed_time Float
  start_date String
  summary_polyline String
  average_cadence Int
  average_heartrate Int
  average_pace Float
  week Week? @relation(fields: [weekId], references: [id])
  weekId Int?
  zone Int
}

model Week {
  id Int @id @unique
  activities Activity[]
  activityCount Int
  user User @relation(fields: [userId], references: [id])
  userId Int 
  week Int
  year Int 
  distance Float
  heartrate Int
  cadence Int
  time Float
}



