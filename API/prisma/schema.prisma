generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Activity {
  id  Int @id @default(autoincrement())
  stravaId Float @unique
  distance Float
  elapsed_time Float
  start_date String
  summary_polyline String
  average_cadence Float
  average_heartrate Float
  week Int
  zone Int
}

